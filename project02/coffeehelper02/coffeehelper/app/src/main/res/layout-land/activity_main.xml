<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:text="Coffee"
        app:layout_constraintStart_toStartOf="@+id/tvCoffee"
        app:layout_constraintTop_toBottomOf="@+id/tvCoffee" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="Water"
        app:layout_constraintStart_toStartOf="@+id/tvWater"
        app:layout_constraintTop_toBottomOf="@+id/tvWater" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Cups"
        app:layout_constraintBottom_toTopOf="@+id/cupsSwitch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.231"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="3dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/cupsSwitch"
        app:layout_constraintEnd_toStartOf="@+id/cupsSwitch" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="3dp"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="@+id/cupsSwitch"
        app:layout_constraintStart_toEndOf="@+id/cupsSwitch" />

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:background="#8CA646"
        android:text="@string/calculate"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.211"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCoffee"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/etCoffee"
        android:layout_width="97dp"
        android:layout_height="44dp"
        android:layout_marginBottom="128dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="number"
        android:text="@string/_17"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.214"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/cupsSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toTopOf="@+id/etCoffee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.234"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginBottom="96dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/stop"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginStart="400dp"
        android:layout_marginBottom="96dp"
        android:background="@color/colorPrimary"
        android:text="@string/start"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Chronometer
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="216dp"
        android:text="@string/OO_OO"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.792"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvWater"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="60dp"
        android:text="@string/_272g"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@+id/tvCoffee"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCoffee"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="60dp"
        android:text="@string/_17g"
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>